<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CustomarRegSublet</servlet-name>
        <servlet-class>com.controller.CustomarRegSublet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgentRegSublet</servlet-name>
        <servlet-class>com.controller.AgentRegSublet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CusRechargeSublet</servlet-name>
        <servlet-class>com.controller.CusRechargeSublet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CusrechargrSublet</servlet-name>
        <servlet-class>com.controller.CusrechargrSublet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Java Restful</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>com</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ShowCustRcchargeSublet</servlet-name>
        <servlet-class>com.controller.ShowCustRcchargeSublet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RetailerRechargrSublet</servlet-name>
        <servlet-class>com.controller.RetailerRechargrSublet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Java Restful</servlet-name>
        <url-pattern>/restful/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomarRegSublet</servlet-name>
        <url-pattern>/CustomarRegSublet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgentRegSublet</servlet-name>
        <url-pattern>/AgentRegSublet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CusRechargeSublet</servlet-name>
        <url-pattern>/CusRechargeSublet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CusrechargrSublet</servlet-name>
        <url-pattern>/CusrechargrSublet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowCustRcchargeSublet</servlet-name>
        <url-pattern>/ShowCustRcchargeSublet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RetailerRechargrSublet</servlet-name>
        <url-pattern>/RetailerRechargrSublet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
